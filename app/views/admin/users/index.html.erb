 <div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= t 'admin.all_users'%></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">


        <%if @admin_users.present?%>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div  class="panel-heading"><%= t 'admin.all_users'%> </div>


                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">


                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-vendors">
                            <thead>
                                <tr>
                                    <th style="display:none;"></th>


                                 
                                    <th><%= t 'admin.email'%></th>
                                    <th><%= t 'admin.ban'%></th>
                                    
                                    



                                </tr>
                            </thead>
                            <tbody>

                                <% @admin_users.each do |user| %>

                                <tr class="odd gradeX">
                                    <td style="display: none;"></td>

                                   
                                    <td><%= user.email %></td> 
                                   
                                  

                                     <td><input type="checkbox" data-toggle="toggle"<%= user.ban? ? 'checked' : 'uncheked'%>  data-on="Un Ban" data-off="Ban" onChange='handleClick(this,<%= user.id%>);'><%user.ban%></td>
                                   


                                </td>
                            </tr>


                            <% end %>                                                                             
                        </tbody>
                    </table>

                    <% end %>

                </div>
                <!-- /.table-responsive -->

                <%#=render :partial => 'vendor_categories'%>
                <!-- /.table-responsive -->
            </div>

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>
</div>
