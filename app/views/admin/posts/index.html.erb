 <div id="page-wrapper">

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t 'admin.all_posts'%></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">

    <%if @admin_posts.present?%>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div  class="panel-heading"><%= t 'admin.all_posts'%> </div>
    
                
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                

                    <div class="dataTable_wrapper">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-vendors">
        <thead>
            <tr>
            <th style="display:none;"></th>
            
                <th><%= t 'admin.title'%></th>
                
                <th><%= t 'admin.description'%></th>
                <th><%= t 'admin.avatar'%></th>

                 <th><%= t "Action"%></th>
                
              
            </tr>
        </thead>
        <tbody>

        <% @admin_posts.each do |post| %>

            <tr class="odd gradeX">
            <td style="display: none;"></td>
                <td><%= post.title %></td>
        
                <td><%= post.description %></td> 
                <td><%= image_tag post.avatar.url(:thumb) %></td>

                <td><%= image_tag category.image.avatar.url(:thumbnail) rescue '' %>
                
                    <span><%= link_to '', edit_admin_post_path(post),class: "edit fa fa-edit icon_link with-tip no-text", title: "edit" %> </span>
                    <span>
                        
                        <%= link_to '', admin_post_path(post),  method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-trash icon_link with-tip no-text"%>
                    </span>
                </td>
            </tr>


        <% end %>                                                                             
        </tbody>
    </table>
    <% end %>
</div>
<!-- /.table-responsive -->
<script>
    $(document).ready(function() {
        $('#dataTables-vendors').DataTable({
                responsive: true
        });
    });
</script>
                    <%#=render :partial => 'vendor_categories'%>
                    <!-- /.table-responsive -->
                </div>
                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
</div>
<!-- /.row -->