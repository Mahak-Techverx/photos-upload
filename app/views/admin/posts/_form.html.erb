<div class="row">
  <div class="col-lg-12">
   
      <div class="panel-heading">
        Posts
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_for(@admin_post) do |f| %>
            <% if @admin_post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@admin_post.errors.count, "error") %> prohibited this admin_post from being saved:</h2>

              <ul>
                <% @admin_post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <div class="form-group">
             <%=f.label :title%>
             <%=f.text_field :title ,class: 'form-control', placeholder: 'Enter title' , required: 'true'%>
           </div>
          

           <div class="form-group">
             <%=f.label :description%>
             <%=f.text_area :description ,class: 'form-control', placeholder: 'Enter description', required: 'true'%>
           </div>
           <div class="field">
            <%= f.file_field :avatar %>

          </div>
          
          <div class="form-group">
            <%if f.object.avatar.present?%>
            <%= image_tag f.object.avatar.url(:thumb) %>
            <%end%>
          </div>
            <div class="actions">
          <%= f.submit 'Submit ', class: "btn btn-default" %>
             </div>
          <%end%>
        </div>
        <!-- /.col-lg-6 (nested) -->

      </div>
      <!-- /.row (nested) -->
    </div>
    <!-- /.panel-body -->
  
  <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>
<!-- /.row -->














